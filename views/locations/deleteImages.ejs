<% layout('../views/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Delete Images</h1>
    <div class="col-6 offset-3">
        <form action="/locations/edit/<%= location._id %>/deleteImages?_method=DELETE" method="POST">
            <% location.image.forEach(image => { %>
                <div class="card mb-3">
                    <img src="<%= image.url %>" class="card-img-top" alt="Image">
                    <div class="card-body">
                        <h5 class="card-title"><%= image.filename %></h5>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="deletedImages[]" value="<%= image.filename %>" id="<%= image.filename %>">
                            <label class="form-check-label" for="<%= image.filename %>">
                                Delete this image
                            </label>
                        </div>
                    </div>
                </div>
            <% }) %>
            <button type="submit" class="btn btn-danger">Delete Selected Images</button>
        </form>
    </div>
</div>