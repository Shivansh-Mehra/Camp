<% layout('../views/layouts/boilerplate') %>
<%- include('../partials/flash') %>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/users/login" method="POST" novalidate class="valida"> 
            <div class="card">
                <img style="height: 30rem;" src="https://images.unsplash.com/photo-1539183204366-63a0589187ab?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Welcome Back">
                <div class="card-body">
                    <div class="card-text">
                        <label for="username" class="form-label">Enter your Username : </label>
                        <input type="text" id="username" class="form-control" name="username" required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                    <div class="card-text">
                        <label for="pass" class="form-label">Enter your Password : </label>
                        <input type="password" id="pass" class="form-control" name="password" required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                    <br>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="../../public/JS/validateForms.js>